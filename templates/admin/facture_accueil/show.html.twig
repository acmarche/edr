{% extends '@AcMarcheEdrAdmin/layout.html.twig' %}

{% block body -%}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Détails de l'accueil du {{ factureAccueil.accueilDate | format_date('full') }} facturée</h3>
        </div>
        <div class="card-body">

            <table class="table table-bordered table-hover">
                <tr>
                    <th>Enfant</th>
                    <td>{{ factureAccueil.nom }} {{ factureAccueil.prenom }}</td>
                </tr>
                <tr>
                    <th>Coût</th>
                    <td>{{ factureAccueil.cout }} €</td>
                </tr>
            </table>

            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="ti ti-trash"></i> Détacher de la facture
            </button>
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#editModal">
                <i class="ti ti-edit"></i> Modifier l'accueil
            </button>

        </div>
        <div class="card-footer">
            <a href="{{ path('edr_admin_facture_show',{'id':facture.id}) }}" class="mt-4">
                <i class="ti ti-long-arrow-alt-left"></i> Retour à la facture
            </a>
        </div>
    </div>

    {% include '@AcMarcheEdrAdmin/facture_accueil/_delete_form.html.twig' %}
    {% include '@AcMarcheEdrAdmin/facture_accueil/_edit_form.html.twig' %}


{% endblock %}
