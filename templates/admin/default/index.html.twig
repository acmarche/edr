{% extends '@AcMarcheEdrAdmin/layout.html.twig' %}

{% block body -%}

    <div class="card mb-3">
        <div class="card-header">
            <h3>Accès rapide</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-info">Ecrivez le nom de l'enfant pour un accès rapide</div>

            <form method="post" action="{{ path('edr_admin_ajax_enfants') }}">
                <input type="hidden" name="_token" value="{{ csrf_token('searchquick') }}">
                {{ component('SearchLiveEnfant',{'t':2}) }}
            </form>
        </div>
        <div class="card-footer">
            <a href="{{ path('edr_front_home') }}">
                <i class="ti ti-arrow-left"></i>
                Retour au site public
            </a>
        </div>
    </div>
{% endblock %}
